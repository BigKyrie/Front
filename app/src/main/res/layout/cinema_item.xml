<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp">
    <TextView
        android:id="@+id/CinemaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="CinemaName" />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CinemaName"
        android:textSize="16sp"
        android:textColor="#363636"
        android:text="location"/>
    <RelativeLayout
        android:id="@+id/bollen"
        android:layout_width="800px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/location"
        android:padding="5dp">

        <TextView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#363636"
            android:text="wifi"/>
        <TextView
            android:id="@+id/glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wifi"
            android:textColor="#363636"
            android:layout_marginLeft="100sp"
            android:text="3D-glass"/>
    </RelativeLayout>

    <Button
        android:id="@+id/SelectTime"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bollen"
        android:background="@drawable/buyticket"
        android:width="60dp"
        android:height="30dp"
        android:text="@string/select_time" />


</RelativeLayout>
